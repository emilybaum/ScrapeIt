<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">ScrapeIt</h1>
    <p class="lead text-muted">A web scraper designed to bring in content from BuzzfeedNews and allow you to add notes
      that are paired
      with the articles.
    </p>
    <p>
      <a href="/articles" class="btn btn-primary my-2">Show articles</a>
      <a href="/scrapeit" id="scrapeIt" class="btn btn-info my-2">Scrape new articles</a>
      <a href="/notes" class="btn btn-secondary my-2">See notes</a>
    </p>
  </div>
</section>

<div class="album py-5 bg-light">
  <div class="container">

    <div class="row">

    {{#each articles}}
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <img class="card-img-top" src={{this.img}} alt="Card image cap">
          <div class="card-body">
            <h3>{{this.title}}</h3>
            <p class="card-text text-muted eb-description">{{this.description}}</p>
            <div class="d-flex flex-column justify-content-between align-items-center">
              <div class="btn-group">
                <a href={{this.link}} target="_blank"><button type="button" class="btn btn-sm btn-outline-secondary">View source</button></a>
                {{!-- <a href="notes/{{this._id}}"><button type="button" class="ml-1 btn btn-sm btn-outline-secondary">Add a note</button></a> --}}
                <button type="button" class="ml-1 btn btn-sm btn-outline-secondary" data-toggle="modal" data-target="#{{this._id}}">
                  Notes
                </button>
              </div>
              <small class="text-muted">from BuzzfeedNews</small>
            </div>
          </div>
        </div>
      </div>
    {{!-- {{/each}}    --}}

    <!-- Button trigger modal -->
    {{!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#{{this._id}}">
      Launch demo modal
    </button> --}}
    
    <!-- Modal -->
    <div class="modal fade" id="{{this._id}}" article-id="{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            ...
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
    {{/each}}


    </div>
  </div>
</div>








