<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">ScrapeIt</h1>
    <p class="lead text-muted">A web scraper designed to bring in content from BuzzfeedNews and allow you to add notes
      that are paired
      with the articles.
    </p>
    <p>
      <a href="/articles" class="btn btn-primary my-2">Show articles</a>
      <a  id="scrapeIt" class="btn btn-info my-2">Run scrape</a>
      {{!-- <a href="/notes" class="btn btn-secondary my-2">See notes</a> --}}
    </p>
  </div>
</section>

<div class="album py-5 bg-light">
  <div class="container">

    <div class="row">

    {{#each articles}}
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <img class="card-img-top" src={{this.img}} alt="Card image cap">
          <div class="card-body">
            <h3>{{this.title}}</h3>
            <p class="card-text text-muted eb-description">{{this.description}}</p>
            <div class="d-flex flex-column justify-content-between align-items-center">
              <div class="btn-group">
                <a href={{this.link}} target="_blank">
                  <button type="button" class="ml-1 btn btn-sm btn-outline-secondary">
                  Source
                  </button>
                </a>
                <button type="button" class="ml-1 btn btn-sm btn-outline-secondary newNotes" article-id="{{this._id}}"
                  data-toggle="modal" data-target="#newNotesModal">
                  Add note
                </button>
              </div>
            </div>
              {{!-- <div> --}}
                <h3 class="text-center mt-2">Notes</h3>
                <div class="noteList">
                  {{#each this.note}}
                  <div class="noteGroup">
                    <p>{{this.body}}</p>
                    <span data-id={{this._id}} class="pl-1 remove-item oi oi-trash"><i class="fa fa-trash"></i></span>
                    {{!-- <i class="fa fa-trash"></i> --}}

                  </div>
                  {{/each}}
                </div>
              {{!-- </div> --}}
              <small class="text-muted">from BuzzFeedNews</small>
            
          </div>
        </div>
      </div>
    {{/each}}   

    
    <!-- Modal for Saved Notes -->
    <div class="modal fade" id="savedNotesModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Notes</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <ul>
              {{!-- {{#each articles}}
              <li id="noteBody">
                  <p>{{@index}}: {{.}}!</p>
                  <button>X</button>
              </li>
              {{/each}} --}}
            </ul>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            {{!-- <button type="button" class="btn btn-primary">Save changes</button> --}}
          </div>
        </div>
      </div>
    </div>
    


    <!-- Modal for New Notes -->
    <div class="modal fade" id="newNotesModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add your note</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            {{!-- form for text area --}}
            <div class="form-group">
              <label for="userTextInput"></label>
              <textarea class="form-control" id="userTextInput" rows="3"></textarea>
            </div>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" id="saveNewNote" class="btn btn-primary saveNote">Save note</button>
          </div>
        </div>
      </div>
    </div>


    </div>
  </div>
</div>








